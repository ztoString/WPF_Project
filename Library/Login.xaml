<Window x:Class="Library.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="364">
    <Grid Margin="0,0,-8,0">
    <Label Content="用户名" HorizontalAlignment="Left" Margin="73,82,0,0" VerticalAlignment="Top"/>
    <Label Content="密码" HorizontalAlignment="Left" Margin="73,141,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.798,-0.492"/>
    <Button Content="登陆" HorizontalAlignment="Left" Margin="146,217,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" RenderTransformOrigin="1.147,0.053"  />
    <TextBox  x:Name ="txtUserName" HorizontalAlignment="Left" Height="23" Margin="127,82,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" Text="{Binding UserName,Mode=TwoWay}"/>

    <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Height="23" Margin="127,141,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding UserPassword,Mode=TwoWay}"/>
    </Grid>
</Window>
